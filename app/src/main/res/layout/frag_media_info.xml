<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp5"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dp5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_media_info"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_music_launcher_round" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_media_info_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/unknown_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp16"
            app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_media_info"
            app:layout_constraintTop_toTopOf="@+id/iv_media_info" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_media_info_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/unknown_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp16"
            app:layout_constraintBottom_toBottomOf="@+id/iv_media_info"
            app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_media_info"
            app:layout_constraintTop_toBottomOf="@+id/tv_media_info_name" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_margin="@dimen/dp10"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_black_play" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
