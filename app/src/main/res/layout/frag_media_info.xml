<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_media_info"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp80"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_music_launcher_round" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_media_info_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/unknown_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp14"
        app:layout_constraintBottom_toTopOf="@+id/tv_media_info_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_media_info"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_media_info_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/unknown_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_media_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_media_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_media_info_name" />

</android.support.constraint.ConstraintLayout>
