<resources>

    <style name="AppBaseV21Theme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorTheme</item>
        <item name="android:navigationBarColor">@color/colorTheme</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseV21Theme">

    </style>

    <style name="AppBaseNoBarV21Theme" parent="AppBaseNoBarTheme">
        <item name="android:statusBarColor">@color/colorTheme</item>
    </style>


    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorTheme</item>
        <item name="android:navigationBarColor">@color/colorTheme</item>
        <item name="android:windowBackground">@color/colorTheme</item>
    </style>
</resources>
