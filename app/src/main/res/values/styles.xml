<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorThemeDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorTheme</item>
        <item name="colorControlActivated">@color/colorTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/colorTheme</item>
        <item name="colorControlActivated">@color/colorTheme</item>
    </style>

    <style name="AppTheme.NoActionBar.Translate" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BLTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorTheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NotificationContent" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="SelfSeekBarStyle">
        <item name="android:paddingLeft">@dimen/dp5</item>
        <item name="android:paddingStart">@dimen/dp5</item>
        <item name="android:paddingEnd">@dimen/dp5</item>
        <item name="android:paddingRight">@dimen/dp5</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/self_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/self_progress_horizontal</item>
        <item name="android:thumb">@drawable/selector_seek_bar</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:maxHeight">@dimen/dp2</item>
        <item name="android:minHeight">@dimen/dp2</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!--关闭时的颜色-->
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <!--关闭时的轨迹颜色取30%的颜色-->
        <item name="android:colorForeground">@color/colorWhite</item>
    </style>

    <style name="TransDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
